<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#4000BCD4"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/t"
        android:layout_width="match_parent"
        android:layout_height="217dp"
        android:background="@drawable/Mane">

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:iconifiedByDefault="false"
            android:queryBackground="#6565D1EC"
            android:queryHint="What are you looking for?"
            android:searchHintIcon="@color/purple_500"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:text="Air Jordan Series" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/Nike1" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/Nike2" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="70dp"
            android:layout_height="93dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/Nike3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:text="$114" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:text="$144" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:text="$99" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="NIKE Air Jordan Retro - Green" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="70dp"
            android:layout_height="314dp"
            android:layout_weight="1"
            android:text="NIKE Air Jordan Retro - Blue" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="NIKE Jordan Yellow Shoes" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            style="@style/TextAppearance.AppCompat.Medium"
            android:padding="10dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:text="Discover the brands" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/arcticons_nike" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/NB" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/adidas" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/puma" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/image2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="175dp"
            android:layout_height="132dp"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#84FFFF"
            android:shadowColor="@color/black"
            android:shadowRadius="@android:integer/config_longAnimTime"
            android:text="\n\n\n\n\n\tEverybody has talent, but ability takes hard work." />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#88D6F1D6">

        <ImageView
            android:id="@+id/imageView14"
            android:padding="1dp"
            android:layout_width="20dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:srcCompat="@drawable/account" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="20dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:padding="1dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/home" />

        <ImageView
            android:id="@+id/imageView15"
            android:padding="1dp"
            android:layout_width="20dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:srcCompat="@drawable/cart" />

    </LinearLayout>
</LinearLayout>